<!-- # if message is a sent message, display on right hand side of screen
if message is a received message, display on left hand side of screen
messages to be wrapped in color
messages to be in date order
-->
<form class="form-horizontal">
  <div class="form-group ">
    <div class="col-sm-8 col-sm-offset-2">
      <%= collection_select(:message_receiver, :receiver_id, User.where("id <> ?",current_user.id), :id, :email, prompt: true) %>
    </div>
  </div>
  <div class="form-group">
    <label for="messsage" class="col-sm-2 control-label">Message</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="messsage" placeholder="">
    </div>
    <div class="col-sm-2">
      <a id="send-message" href="javascript:void(0)" class="btn btn-success">Send</a>
    </div>
  </div>
</form>

<% @messages.each do |message| %>

  <% if message.sender_user_id == current_user.id %>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-8">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <div class="panel-title">
              To: <%= message.receiver.email %>
            <br>
             <%= message.created_at.strftime("%b %d, %Y at %I:%M %p") %>
            <br>
              <div class="panel-body text-right">
                <%= message.body %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-xs-4 panel">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              From: <%= message.sender.email %>
            <br>
              <%= message.created_at.strftime("%b %d, %Y at %I:%M %p") %>
            <br>
              <div class="panel-body text-right">
                <%= message.body %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>


<% end %>
