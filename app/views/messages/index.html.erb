<!-- # if message is a sent message, display on right hand side of screen
if message is a received message, display on left hand side of screen
messages to be wrapped in color
messages to be in date order
-->
<form class="form-horizontal">
  <div class="form-group ">
    <div class="col-sm-8 col-sm-offset-2">
      <%= collection_select(:message_receiver, :receiver_id, User.where("id <> ?",current_user.id), :id, :email, prompt: true) %>
    </div>
  </div>
  <div class="form-group">
    <label for="messsage" class="col-sm-2 control-label">Message</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="messsage-body" placeholder="">
    </div>
    <div class="col-sm-2">
      <a id="send-message" href="javascript:void(0)" class="btn btn-success">Send</a>
    </div>
  </div>
</form>

<% @messages.each do |message| %>

  <%= render partial: "display", locals:{message: message} %>


<% end %>
